<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleStr"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="#9E9E9E"/>

    <Button
        android:id="@+id/movie"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/movieStr"
        android:textColor="@color/textColor"
        android:background="#2E3D49"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:onClick="showMsg"/>
    <Button
        android:id="@+id/stock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/stockStr"
        android:textColor="@color/textColor"
        android:background="#2E3D49"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:onClick="showMsg"/>
    <Button
        android:id="@+id/reader"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/readerStr"
        android:textColor="@color/textColor"
        android:background="#2E3D49"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:onClick="showMsg"/>
    <Button
        android:id="@+id/news"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/newsStr"
        android:textColor="@color/textColor"
        android:background="#2E3D49"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:onClick="showMsg"/>
    <Button
        android:id="@+id/GraduationDsg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/graduationDsgStr"
        android:textColor="@color/textColor"
        android:background="#2E3D49"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:onClick="showMsg"/>

</LinearLayout>
